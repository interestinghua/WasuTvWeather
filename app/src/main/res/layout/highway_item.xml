<?xml version="1.0" encoding="utf-8"?>
    <!--android:background="@drawable/gaosuitem"-->
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_gravity="center"
    android:layout_width="460dp"
    android:layout_height="276dp"
    android:layout_marginLeft="10dp"
    android:layout_marginRight="10dp"
    android:padding="15dp"
    android:background="@drawable/gaosuitem"
    android:descendantFocusability="afterDescendants"
    android:focusableInTouchMode="true"
    android:focusable="true">
    <TextView
        android:id="@+id/roadidTextview"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="35sp"
        android:textColor="@color/gaosuid"
        android:text="G60"/>

    <TextView
        android:id="@+id/roadnameTextview"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:text="沈海高速杭州湾大桥"
        android:textSize="35sp"
        android:textColor="@color/gaosuid"/>

    <TextView
        android:id="@+id/dateTextview"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:text="2015-04-21 14:00:00"
        android:textSize="25sp"
        android:textColor="@color/gaosuid"/>

    <RelativeLayout
        android:layout_marginTop="20dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/txt01"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="风速"
            android:textSize="25sp"
            android:textColor="@color/pmziti"/>
        <TextView
            android:id="@+id/fengsuTextview"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:layout_toRightOf="@id/txt01"
            android:text="26"
            android:textSize="25sp"
            android:textColor="@color/pmziti"/>
        <TextView
            android:id="@+id/txt02"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:layout_toRightOf="@id/fengsuTextview"
            android:text="米/秒"
            android:textSize="25sp"
            android:textColor="@color/pmziti"/>

        <TextView
            android:id="@+id/txt03"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_toRightOf="@id/txt02"
            android:text="能见度"
            android:textSize="25sp"
            android:textColor="@color/pmziti"/>

        <TextView
            android:id="@+id/njdTextview"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/txt03"
            android:layout_marginLeft="10dp"
            android:text="12000"
            android:textSize="25sp"
            android:textColor="@color/pmziti"/>
        <TextView
            android:id="@+id/txt04"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_toRightOf="@id/njdTextview"
            android:text="米"
            android:textSize="25sp"
            android:textColor="@color/pmziti"/>

        <TextView
            android:id="@+id/txt05"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/txt01"
            android:layout_marginTop="10dp"
            android:text="温度"
            android:textSize="25sp"
            android:textColor="@color/pmziti"/>
        <TextView
            android:id="@+id/wenduTextview"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:layout_toRightOf="@id/txt05"
            android:layout_alignBottom="@id/txt05"
            android:text="26"
            android:textSize="25sp"
            android:textColor="@color/pmziti"/>
        <TextView
            android:id="@+id/txt06"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:layout_toRightOf="@id/wenduTextview"
            android:layout_alignBottom="@id/wenduTextview"
            android:text="°C"
            android:textSize="25sp"
            android:textColor="@color/pmziti"/>

        <TextView
            android:id="@+id/txt07"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_below="@id/txt03"
            android:layout_alignLeft="@id/txt03"
            android:text="风向"
            android:textSize="25sp"
            android:textColor="@color/pmziti"/>

        <TextView
            android:id="@+id/fengxiangTextview"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"
            android:layout_toRightOf="@id/txt07"
            android:layout_below="@id/txt03"
            android:text="12000"
            android:textSize="25sp"
            android:textColor="@color/pmziti"/>

    </RelativeLayout>

</LinearLayout>