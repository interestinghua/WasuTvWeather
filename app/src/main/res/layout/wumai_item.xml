<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:layout_gravity="center"
    android:gravity="center_vertical"
    android:layout_width="565dp"
    android:layout_height="84dp"
    android:background="@drawable/wumaiitem">
    <TextView
        android:id="@+id/diquTxtview"
        android:layout_width="180dp"
        android:layout_height="84dp"
        android:layout_marginLeft="10dp"
        android:textSize="@dimen/wumaitext_size"
        android:gravity="center_vertical|left"
        android:layout_gravity="center_vertical"
        android:textColor="@color/wumaiziti"
        android:text="越城区"/>
    <ImageView
        android:layout_width="62dp"
        android:layout_height="82dp"
        android:layout_marginLeft="5dp"
        android:gravity="center"
        android:layout_gravity="center_vertical"
        android:background="@drawable/wumai0203"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="84dp"
        android:gravity="center"
        android:textSize="@dimen/wumaitext_size"
        android:layout_gravity="center_vertical"
        android:layout_marginLeft="5dp"
        android:textColor="@color/pmziti"
        android:text="@string/wasu02"/>

    <TextView
        android:id="@+id/zhiliangTxtview"
        android:layout_width="wrap_content"
        android:layout_height="84dp"
        android:gravity="center"
        android:layout_gravity="center_vertical"
        android:textSize="@dimen/wumaitext_size"
        android:layout_marginLeft="10dp"
        android:text="暂无数据"/>
</LinearLayout>